<Window x:Class="AlarmClocks.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AlarmClocks"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label Name="lblTime" Content="12:00:00" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="36" Margin="0,125,0,0"/>
        <TextBox Name="txbAlarm" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" FontSize="24" Margin="0,188,0,0"/>
        <Button Name="btnStart" Content="Start Timer" HorizontalAlignment="Center" Margin="0,237,0,0" VerticalAlignment="Top" Width="120" FontSize="20" Height="30"/>

    </Grid>
</Window>
